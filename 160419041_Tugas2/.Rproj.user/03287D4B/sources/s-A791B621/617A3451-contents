# install.packages("rrcov")
library(rrcov)
data(diabetes)
diabetes
summary(diabetes)

median(fpg)
mean(fpg)
sd(fpg)
var(fpg)
cov(fpg,insulin)
cor(fpg,insulin)

sapply(diabetes[1:4],mean)
sapply(diabetes[1:4],sd)
sapply(diabetes[1:4],median)


attach(diabetes)
aggregate(diabetes[1:4],list(group),mean)

# install.packages("e1071")
library(e1071)
aggregate(diabetes[1:4],list(group),skewness)
aggregate(diabetes[1:4],list(group),kurtosis)

stem(rw)
stem(fpg)
hist(fpg)

library(MASS)
truehist(fpg)
lines(density(fpg), lwd = 2)
lines(density(fpg,adjust = 0.5), lwd = 1)

boxplot(fpg)
boxplot(sspg)
boxplot(insulin)

# Quantile Plot
qqnorm(fpg)
qqline(fpg)

#generate normal standar
dnorm=rnorm(100,0,1)
qqnorm(dnorm)
qqline(dnorm)

plot(fpg,glucose)
lines(lowess(x = fpg, y = glucose), col = "red", lwd = 1)

pairs(cbind(rw, fpg, glucose, insulin, sspg), gap = 0, panel = panel.smooth)
scatterplotMatrix(diabetes[1:4])

ts.plot(fpg)
ts.plot(sspg)
